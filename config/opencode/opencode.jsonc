// https://opencode.ai/docs/config
{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "mcp": {
      // https://github.com/ChromeDevTools/chrome-devtools-mcp/
      "chrome-devtools": {
        "type": "local",
        "command": [
          "npx",
          "chrome-devtools-mcp@latest"
        ],
        "enabled": false
      },
    // https://github.com/upstash/context7
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    // https://vercel.com/blog/grep-a-million-github-repositories-via-mcp
    "grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    // https://linear.app/docs/mcp
    "linear": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote@latest",
        "https://mcp.linear.app/sse"
      ],
      "enabled": false
    },
    // https://github.com/microsoft/playwright-mcp
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": false
    },
    // https://docs.sentry.io/product/sentry-mcp
    "sentry": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote@latest",
        "https://mcp.sentry.dev/mcp"
      ],
      "enabled": false
    }
  },
  "model": "anthropic/claude-opus-4-5",   // https://models.dev
  "permission": {
    "bash": {
      "*": "ask",
      "ast-grep*": "allow",
      "awk*": "allow",
      "basename*": "allow",
      "bun test*": "allow",
      "cat*": "allow",
      "cut*": "allow",
      "deno test*": "allow",
      "diff*": "allow",
      "dirname*": "allow",
      "docker inspect*": "allow",
      "docker logs*": "allow",
      "docker ps*": "allow",
      "env": "allow",
      "fd*": "allow",
      "file*": "allow",
      "find*": "allow",
      "fzf*": "allow",
      "gh auth status*": "allow",
      "gh gist list*": "allow",
      "gh gist view*": "allow",
      "gh issue list*": "allow",
      "gh issue status*": "allow",
      "gh issue view*": "allow",
      "gh pr checks*": "allow",
      "gh pr diff*": "allow",
      "gh pr list*": "allow",
      "gh pr status*": "allow",
      "gh pr view*": "allow",
      "gh release list*": "allow",
      "gh release view*": "allow",
      "gh repo clone*": "allow",
      "gh repo list*": "allow",
      "gh repo view*": "allow",
      "gh run list*": "allow",
      "gh run view*": "allow",
      "gh search*": "allow",
      "gh workflow list*": "allow",
      "gh workflow view*": "allow",
      "git branch": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git remote": "allow",
      "git remote show*": "allow",
      "git remote get-url*": "allow",
      "git rev-parse*": "allow",
      "git show*": "allow",
      "git status*": "allow",
      "grep*": "allow",
      "head*": "allow",
      "jq*": "allow",
      "ls*": "allow",
      "man*": "allow",
      "node --test*": "allow",
      "npm test*": "allow",
      "pwd": "allow",
      "realpath*": "allow",
      "rg*": "allow",
      "sg*": "allow",
      "shellcheck*": "allow",
      "shfmt*": "allow",
      "sort*": "allow",
      "stat*": "allow",
      "tail*": "allow",
      "tr*": "allow",
      "tree*": "allow",
      "type*": "allow",
      "uniq*": "allow",
      "wc*": "allow",
      "which*": "allow",
      "yarn test*": "allow",
      "yq*": "allow"
    }
  },
  "plugin": [
    // https://github.com/franlol/opencode-md-table-formatter
    "@franlol/opencode-md-table-formatter@0.0.3",
    // https://github.com/anomalyco/opencode-anthropic-auth
    "opencode-anthropic-auth@0.0.9"
  ],
  "share": "disabled",
  "theme": "tokyonight"
}
