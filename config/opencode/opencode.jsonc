// https://opencode.ai/docs/config
{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "mcp": {
    // https://github.com/upstash/context7
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    // https://vercel.com/blog/grep-a-million-github-repositories-via-mcp
    "grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    // https://linear.app/docs/mcp
    "linear": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote@latest",
        "https://mcp.linear.app/sse"
      ],
      "enabled": false
    },
    // https://github.com/microsoft/playwright-mcp
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": false
    },
    // https://docs.sentry.io/product/sentry-mcp
    "sentry": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote@latest",
        "https://mcp.sentry.dev/mcp"
      ],
      "enabled": false
    }
  },
  "model": "anthropic/claude-opus-4-5",   // https://models.dev
  "permission": {
    "bash": {
      "*": "ask",
      "ast-grep *": "allow",
      "awk *": "allow",
      "basename *": "allow",
      "cat *": "allow",
      "cut *": "allow",
      "diff *": "allow",
      "dirname *": "allow",
      "docker inspect *": "allow",
      "docker logs *": "allow",
      "docker ps *": "allow",
      "env": "allow",
      "fd *": "allow",
      "file *": "allow",
      "find *": "allow",
      "fzf *": "allow",
      "gh pr diff *": "allow",
      "gh pr view *": "allow",
      "git branch": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git remote": "allow",
      "git rev-parse *": "allow",
      "git show *": "allow",
      "git status *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "jq *": "allow",
      "ls *": "allow",
      "man *": "allow",
      "pwd": "allow",
      "realpath *": "allow",
      "rg *": "allow",
      "sg *": "allow",
      "shellcheck *": "allow",
      "shfmt *": "allow",
      "sort *": "allow",
      "stat *": "allow",
      "tail *": "allow",
      "tr *": "allow",
      "tree *": "allow",
      "type *": "allow",
      "uniq *": "allow",
      "wc *": "allow",
      "which *": "allow",
      "yq *": "allow"
    }
  },
  "plugin": [
    // https://github.com/franlol/opencode-md-table-formatter
    "@franlol/opencode-md-table-formatter@0.0.3",
    // https://github.com/numman-ali/opencode-openai-codex-auth
    "opencode-openai-codex-auth@4.3.0"
  ],
  // https://numman-ali.github.io/opencode-openai-codex-auth/getting-started.html
  // https://raw.githubusercontent.com/numman-ali/opencode-openai-codex-auth/main/config/opencode-modern.json
  "provider": {
    "openai": {
      "options": {
        "reasoningEffort": "medium",
        "reasoningSummary": "auto",
        "textVerbosity": "medium",
        "include": [
          "reasoning.encrypted_content"
        ],
        "store": false
      },
      "models": {
        "gpt-5.2": {
          "name": "GPT 5.2 (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "none": {
              "reasoningEffort": "none",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            },
            "xhigh": {
              "reasoningEffort": "xhigh",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            }
          }
        },
        "gpt-5.2-codex": {
