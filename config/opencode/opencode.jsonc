// https://opencode.ai/docs/config
{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "mcp": {
    // https://github.com/upstash/context7
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    // https://vercel.com/blog/grep-a-million-github-repositories-via-mcp
    "grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    // https://linear.app/docs/mcp
    "linear": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote@latest",
        "https://mcp.linear.app/sse"
      ],
      "enabled": false
    },
    // https://github.com/microsoft/playwright-mcp
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": false
    },
    // https://docs.sentry.io/product/sentry-mcp
    "sentry": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote@latest",
        "https://mcp.sentry.dev/mcp"
      ],
      "enabled": false
    }
  },
  "model": "anthropic/claude-opus-4-5",   // https://models.dev
  "permission": {
    "bash": {
      "ast-grep": "allow",
      "awk": "allow",
      "basename": "allow",
      "cat": "allow",
      "cut": "allow",
      "diff": "allow",
      "dirname": "allow",
      "docker inspect": "allow",
      "docker logs": "allow",
      "docker ps": "allow",
      "fd": "allow",
      "file": "allow",
      "find": "allow",
      "gh pr diff": "allow",
      "gh pr view": "allow",
      "git diff": "allow",
      "git log": "allow",
      "git show": "allow",
      "git status": "allow",
      "grep": "allow",
      "head": "allow",
      "jq": "allow",
      "ls": "allow",
      "realpath": "allow",
      "rg": "allow",
      "sort": "allow",
      "stat": "allow",
      "tail": "allow",
      "tr": "allow",
      "tree": "allow",
      "uniq": "allow",
      "wc": "allow",
      "yq": "allow",
      "*": "ask"
    }
  },
  "plugin": ["@franlol/opencode-md-table-formatter@0.0.3"],
  "share": "disabled",
  "theme": "tokyonight"
}
