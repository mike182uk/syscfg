{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(ast-grep:*)",
      "Bash(awk:*)",
      "Bash(basename:*)",
      "Bash(cat:*)",
      "Bash(cut:*)",
      "Bash(diff:*)",
      "Bash(dirname:*)",
      "Bash(docker inspect:*)",
      "Bash(docker logs:*)",
      "Bash(docker ps:*)",
      "Bash(env)",
      "Bash(fd:*)",
      "Bash(file:*)",
      "Bash(find:*)",
      "Bash(fzf:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr view:*)",
      "Bash(git branch)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git remote)",
      "Bash(git rev-parse:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(man:*)",
      "Bash(pwd)",
      "Bash(realpath:*)",
      "Bash(rg:*)",
      "Bash(sg:*)",
      "Bash(shellcheck:*)",
      "Bash(shfmt:*)",
      "Bash(sort:*)",
      "Bash(stat:*)",
      "Bash(tail:*)",
      "Bash(tr:*)",
      "Bash(tree:*)",
      "Bash(type:*)",
      "Bash(uniq:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Bash(yq:*)",
      "mcp__context7__get-library-docs",
      "mcp__context7__resolve-library-id",
      "mcp__grep__searchGitHub",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_close"
    ],
    "deny": [],
    "defaultMode": "default"
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "ast-grep@ast-grep-marketplace": true,
    "frontend-design@claude-code-plugins": true
  }
}
